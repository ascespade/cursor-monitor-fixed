# Redis Configuration (للتواصل مع Vercel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Supabase Configuration (محلي على السيرفر أو cloud)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:8000
# أو للـ cloud:
# NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Cursor API
CURSOR_API_KEY=your-cursor-api-key

# Webhook Security (نفس الـ secret في Vercel)
WEBHOOK_SECRET=your-32-chars-random-secret-minimum-32-characters

# Orchestrator Settings
MAX_ITERATIONS=20
AGENT_TIMEOUT_HOURS=4

# Project Path (لاختبار الكود محلياً)
PROJECT_PATH=/home/asce/projects/your-project

# Notifications (اختياري)
SLACK_WEBHOOK_URL=
ENABLE_SLACK_NOTIFICATIONS=false

# Logging
LOG_LEVEL=info
NODE_ENV=production
