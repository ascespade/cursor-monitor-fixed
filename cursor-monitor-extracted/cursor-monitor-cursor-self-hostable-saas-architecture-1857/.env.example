# ============================================================================
# Cursor Monitor - Centralized Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# This file is used by both Next.js App and Orchestrator Worker
# ============================================================================

# ============================================================================
# SUPABASE (Required)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# CURSOR API (Required)
# ============================================================================
CURSOR_API_KEY=your-cursor-api-key

# ============================================================================
# REDIS (Optional - leave unset to use database-only mode)
# ============================================================================
# If REDIS_HOST is not set, the system will use database-only mode (outbox pattern)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================================================
# WEBHOOK SECURITY (Required for webhook verification)
# ============================================================================
WEBHOOK_SECRET=your-32-chars-random-secret-minimum-32-characters

# ============================================================================
# ORCHESTRATOR CONFIGURATION (Optional)
# ============================================================================
MAX_ITERATIONS=20
QUALITY_THRESHOLD=70
AGENT_TIMEOUT_HOURS=4

# ============================================================================
# PROJECT PATH (Optional - for local testing)
# ============================================================================
# PROJECT_PATH=/home/asce/projects/your-project

# ============================================================================
# NOTIFICATIONS (Optional)
# ============================================================================
# SLACK_WEBHOOK_URL=
# ENABLE_SLACK_NOTIFICATIONS=false

# ============================================================================
# LOGGING (Optional)
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
# Use 'development' for local development, 'production' for production
NODE_ENV=development

# ============================================================================
# SETTINGS SERVER (Optional - for orchestrator settings UI)
# ============================================================================
# SETTINGS_SERVER_PORT=3001
